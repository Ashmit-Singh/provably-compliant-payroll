{
  "name": "provably-compliant-payroll",
  "version": "1.0.0",
  "description": "Provably Compliant Enterprise Payroll System",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && mvn spring-boot:run",
    "frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-deps": "cd frontend && npm install",
    "setup-ngx-admin": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/import-ngx-admin.ps1 -Force",
    "frontend-angular": "cd frontend-angular && npm start",
    "install-deps-angular": "cd frontend-angular && npm install",
    "frontend-angular:build": "cd frontend-angular && npm run build",
    "frontend-angular:serve": "cd frontend-angular && ng serve --proxy-config proxy.conf.json"
  },
  "keywords": [
    "payroll",
    "blockchain",
    "compliance",
    "react",
    "spring-boot"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "ethers": "^6.15.0"
  }
}
